{
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "downlevelIteration": true,  // 保持迭代兼容
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./lib",
    "baseUrl": "./lib",
    "paths": {
      "*": [
        "*"
      ]
    }
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "node_modules"
  ]
}
